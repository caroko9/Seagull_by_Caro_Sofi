<body><!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/producto.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <%- include ('partials/head.ejs') %>
  </head>
  <body>

    <%- include ('./partials/header.ejs') %>
  
    <% { %> 
    
    <div class="container text-center">
      <h1 class="titulo">PRODUCTOS SEAGULL</h1>
    </div>
  
    <div class="row g-2">
      <div class="col-6">
        <div class="p-3 no-border text-center">
          <img src="<%= producto.imagen %>" width="60%">
      </div>
      
      </div>
  
      <div class="col-6">
        <div class="p-3 no-border">
          <h3 class="nombreProd"> <%= producto.nombre %> </h3>
          <hr>
          <dl class="row">
            <h4 class="precio"> ARS $ <%= producto.precio %></h4>
            <h4><%= producto.descuento %></h4>
          </dl>
          <hr>
  
          <div class="iconos1" id="mediospago">
            <img src="/img/creditcard.svg" alt="icon creditcard">
            <p>MEDIOS DE PAGO</p>
            <img src="/img/shipping.svg" alt="icon shipping">
            <p>MEDIOS DE ENVIO</p>
          </div>
  
          <hr>
  
          <div class="container">
            <div class="row">
              <div class="col-12">
                <h4>¿POR QUÉ COMPRAR ESTE PRODUCTO?</h4>
                <p class="descripcion"> <%= producto.descripcion %></p>
              </div>
            </div>
          </div>
  
          <hr>
  
          <div class="boton de compra text-center">
            <form action="/productos/carrito" method="POST">
              <input type="hidden" name="productoId" value="<%= producto.id %>">
           
            <button id="agregarAlCarritoButton" class="btn btn-color" onclick="agregarAlCarrito('<%= producto.id %>')">Agregar al Carrito</button>
            
            </form>
          </div>        
        </div>
      </div>
    </div>
  
    <% } %>
  

    <script src="../../public/js/carrito.js"></script>

  </body>
  </html>